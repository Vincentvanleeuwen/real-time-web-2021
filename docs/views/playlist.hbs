<main class="playlist-main">
  <section class="playlist-options">
    <button class="playlist-name">{{ playlistTitle }}#{{searchKey}}</button>
    <label for="playlist-name-text">
      <textarea id="playlist-name-text">{{ playlistTitle }}#{{searchKey}}</textarea>
    </label>
    <div class="share-buttons show-screen-flex">
      <button id="copy-button" class="btn">Spotify Link</button>
      <label for="copy-text">
        <textarea id="copy-text">{{ playlistUrl }}</textarea>
      </label>

      {{#if isHost}}
        <form action="/playlists/{{ playlistTitleUrlSafe }}/{{searchKey}}" method="post">
          <button id="save-button" class="btn">Add Songs</button>
        </form>
      {{/if}}
    </div>
  </section>
  <section class="people-music-container">
    <section class="people">

      {{#each users}}

        {{#ifCond this.id ../host}}
        <section class="person host {{../this.id}}">
          <div class="host-tag"> </div>
        {{else}}
        <section class="person {{../this.id}}">
        {{/ifCond}}
          <img src="{{this.image}}"
               alt="{{this.name}} profile image">
          <h2 class="name">{{this.name}}</h2>
        </section>
      {{/each}}
    </section>

    <section class="song-lists">
      <section class="songs {{userId}}">
        {{#each songs}}
          <section>
            <div>
              <p class="songName">{{songName}}</p>
              <p class="songArtist">{{songArtist}}</p>
            </div>
            <svg xmlns="http://www.w3.org/2000/svg" height="50" viewBox="0 0 24 24" width="50" class="delete">
              <path d="M0 0h24v24H0z" fill="none"/>
              <path d="M0 0h24v24H0V0z" fill="none"/>
              <path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zm2.46-7.12l1.41-1.41L12 12.59l2.12-2.12 1.41 1.41L13.41 14l2.12 2.12-1.41 1.41L12 15.41l-2.12 2.12-1.41-1.41L10.59 14l-2.13-2.12zM15.5 4l-1-1h-5l-1 1H5v2h14V4z"/>
            </svg>
          </section>
        {{/each}}
      </section>
    </section>
  </section>

</main>

