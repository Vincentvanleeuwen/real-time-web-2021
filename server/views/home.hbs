<main>
  <section class="container">
    {{>profile
      name = name
      img = img
    }}
    <section class="home-options">

      <a href="/create" class="btn">Create a playlist</a>

      <form action="/home" method="post">
        <label for="searchPlaylist">
          Join a playlist
          <input type="text" name="searchPlaylist" placeholder="e.g. playlist#aE2Gv2">
        </label>
        {{#if error}}
          <p class="error"> {{ error }}</p>
        {{/if}}
        <input type="submit" value="Join!">
      </form>

    </section>


  </section>

</main>
